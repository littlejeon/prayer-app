<div class="container">
  <h2>Sign In</h2>
    <%= form_tag sessions_path, :action => login_path, :method => 'post' do %>

      <div class="form-field-wrapper">
        <%= label_tag :email %>
        <%= text_field_tag :email, "", class: "input-sm form-full", id: "login-email" %>
      </div>

      <div class="form-field-wrapper">
        <%= label_tag :password %>
        <%= password_field_tag :password, "", id: "login-pass", class: "input-sm form-full" %>
      </div>

      <%= submit_tag "Log In", class: "btn btn-md btn-black", id: "Button1" %>
    <% end %>
</div>
